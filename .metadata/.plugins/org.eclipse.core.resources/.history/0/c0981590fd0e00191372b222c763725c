import java.util.Scanner;

public class E0604 {

	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		
		
		int num = 0;	
	
		int result = 1;
	
	    while(num <= 1000) {
	    	
	    	result = result + num;
	    	num++;
	    	
	    } System.out.println("1+2+3+4....1000 = " +result);
	
	}

}
