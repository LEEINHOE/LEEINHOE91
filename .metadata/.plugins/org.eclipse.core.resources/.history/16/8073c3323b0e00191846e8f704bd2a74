
public class Exam02_03 {

	public static void main(String[] args) {
		int num1;
		num1 = 25;
		
		int num2;
		num2 = 4;
		
		int num3;
		num3 = (num1 / num2);
		
		int num4;
		num4 = (num1 % num2);
		
		System.out.println("25 나누기 4의 몫은" + num3);
		System.out.println("25 나누기 4의 나머지는" + num4);
	}

}
