import java.util.Scanner;

public class Quiz_0605 {

	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		int result =0;
		
		
		System.out.println("0을입력하면종료");
		int num = sc.nextInt();
		
		
	while( num != 0) {
		System.out.println("정수를 입력해주세요 : ");
		result = result + num;
		
		if(num == 0) {
			System.out.println("종료" + result);
			break;
		}
	}
	
	
	}

}
