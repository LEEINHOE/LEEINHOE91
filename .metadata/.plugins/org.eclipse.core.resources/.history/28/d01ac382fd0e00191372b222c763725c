import java.util.Scanner;

public class E0604 {

	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		
		
		int num = sc.nextInt();	
	
		int result = 0;
	
	    while(num <= 1000) {
	    	
	    	result = result + num;
	    	num++;
	    	
	    } System.out.println(result);
	
	}

}
